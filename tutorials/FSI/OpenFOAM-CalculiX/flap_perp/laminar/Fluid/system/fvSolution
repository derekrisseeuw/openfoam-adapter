FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(p|Phi|pcorr)"
    {
        solver          GAMG;
        tolerance       1e-05;
        relTol          0.01;
        smoother        DICGaussSeidel;
    }

    "(p|pcorr)Final"
    {
        $p;
        tolerance       1e-05;
        relTol          0;
    }

    "(U|cellDisplacement)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0.1;
    }

    "(U|cellDisplacement)Final"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-6;
        relTol          0;
    } 

}

PIMPLE
{
    nOuterCorrectors         150;
    nCorrectors              1;
    nNonOrthogonalCorrectors 1;
    consistent               yes;
    correctPhi               yes;
    momentumPredictor        yes; 
    
    outerCorrectorResidualControl
    {
        U
        {
            relTol          0;
            tolerance       1e-6;
        }

        p
        {
            relTol          0;
            tolerance       1e-5;
        }
    }

    residualControl
    {
        "(U|p)" 1e-7;
    }


    //transonic           no;
    //simpleRho           yes;
    //pMaxFactor          1.5;
    //pMinFactor          0.9;
    //turbOnFinalIterOnly no;
}

potentialFlow
{
    nNonOrthogonalCorrectors 10;
}

cache
{
    grad(U);
}

